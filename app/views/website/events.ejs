<%- include("../_partials/_mainheader.ejs") %>
    <main>
        <!-- page-ttle-area start  -->
        <div class="page-ttle-area text-center" data-background="/images/events.jpg">
            <div class="container">
                <div class="page-title">
                    <h2>All Events</h2>
                    <div class="breadcrumb-menu">
                        <ul>
                            <li><a href="/">home</a></li>
                            <li><span>events</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- page-ttle-area start -->

        <!-- events-area-start -->
        <div class="events-area pt-120 pb-60">
            <div class="container">
                <div class="row">
                    <div class="events-top mb-25">
                        <h4>Mark The Dates</h4>
                    </div>
                </div>
                <div class="row">

                    <% events.forEach(event=> { %>
                        <div class="col-lg-6">
                            <div class="main-event mb-40">
                                <div class="event-image w-img">
                                    <a href="/events/<%= event.id %>"><img
                                            src="/uploads/images/<%= event.event_poster %>" alt="poster"
                                            style="height: 500px;"></a>
                                </div>
                                <div class="events-content">
                                    <div class="events-data mb-30">
                                        <div class="events-date-two mr-40 text-center">
                                            <h5>
                                                <%= event.event_date.getDate()%> <span>
                                                        <%= new Date(event.event_date).toLocaleString('default', {
                                                            month: 'short' }); %>
                                                    </span>
                                            </h5>
                                        </div>
                                        <div class="events-text-two fix">
                                            <h5><a href="/events/<%= event.id %>">
                                                    <%= event.event_name %>
                                                </a></h5>
                                        </div>
                                    </div>
                                    <div class="events-meta mb-20">

                                        <i class="fas fa-clock px-2 mr-2">
                                            <%= new Date('1970-01-01T' + event.event_starttime + 'Z' )
                                                .toLocaleTimeString('en-US',
                                                {timeZone:'UTC',hour12:true,hour:'numeric',minute:'numeric'} ); %>
                                        </i>
                                        <i class="fas fa-map-marker-alt px-2">
                                            <%= event.event_location %>
                                        </i>
                                    </div>
                                    <div class="events_button">
                                        <!-- <div class="event_button1 mr-20">
                                        <a href="events-details.html" class="tp-btn-active">reservation</a>
                                    </div> -->
                                        <div class="event_button2">
                                            <a href="/events/<%= event.id %>" class="tp-btn-border">view event</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>

    </main>

    <%- include("../_partials/_mainfooter.ejs") %>